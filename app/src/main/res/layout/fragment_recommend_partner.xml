<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/tv_recmd_partner_cn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="20dp"
        android:text="@string/recmd_partner_cn"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/tv_recmd_partner_en"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_recmd_partner_cn"
        android:layout_toRightOf="@+id/tv_recmd_partner_cn"
        android:text="@string/recmd_partner_en"
        android:textSize="14sp"/>

    <cn.droidlover.xrecyclerview.XRecyclerView
        android:id="@+id/recy_partner"
        android:layout_width="wrap_content"
        android:layout_below="@+id/tv_recmd_partner_cn"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
        android:layout_height="150dp">
    </cn.droidlover.xrecyclerview.XRecyclerView>

