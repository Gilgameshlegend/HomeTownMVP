<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp" >

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/search_content"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="40dp"
        android:elevation="10dp"
        android:ems="5"
        android:background="@drawable/shape_white_rectangle"

        android:drawableLeft="@drawable/ic_location"
        android:text="上海"
        android:gravity="center"/>

    <EditText
        android:id="@+id/search_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:layout_toRightOf="@+id/tv_location"
        android:elevation="10dp"
        android:ems="20"
        android:background="@drawable/shape_white_rectangle"
        android:drawableLeft="@drawable/ic_find"
        android:inputType="text"
        android:textSize="12sp" >
        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btn_filter"
        android:layout_width="45dp"
        android:layout_height="25dp"
        android:layout_below="@+id/search_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="200dp"
        android:background="@drawable/shape_btn"
        android:text="@string/search_filter"
        android:textSize="11sp"
        android:textColor="@color/text_secondary"
        />
    <Button
        android:id="@+id/btn_trip_date"
        android:layout_width="45dp"
        android:layout_height="25dp"
        android:layout_below="@+id/search_content"
        android:layout_toRightOf="@+id/btn_filter"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/shape_btn"
        android:text="@string/search_trip_date"
        android:textSize="11sp"
        android:textColor="@color/text_secondary"
        />
    <Button
        android:id="@+id/btn_member_cnt"
        android:layout_width="45dp"
        android:layout_height="25dp"
        android:layout_below="@+id/search_content"
        android:layout_toRightOf="@id/btn_trip_date"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/shape_btn"
        android:text="@string/search_member_cnt"
        android:textSize="11sp"
        android:textColor="@color/text_secondary"
        />

</RelativeLayout>
