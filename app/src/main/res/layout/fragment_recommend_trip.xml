    <!--app:recyclerScrollbarStyle="outsideOverlay" />-->

    <include
        android:id="@+id/trip1"
        layout="@layout/adapter_trip"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="35dp"
        android:layout_below="@+id/tv_recmd_trip_cn"></include>

    <include
        android:id="@+id/trip2"
        layout="@layout/adapter_trip"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/tv_recmd_trip_cn"
        android:layout_toRightOf="@id/trip1"></include>

